{
  "name": "Weather App - Real-time Weather Information",
  "short_name": "Weather App",
  "description": "Get real-time weather information for any location with beautiful animations and responsive design",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#74b9ff",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["weather", "utilities", "lifestyle"],
  "screenshots": [],
  "icons": [
    {
      "sizes": "512x512",
      "src": "/icons/icon-512.png",
      "type": "image/png"
    },
    {
      "sizes": "48x48",
      "src": "/icons/icon-48.png",
      "type": "image/png"
    },
    {
      "sizes": "72x72",
      "src": "/icons/icon-72.png",
      "type": "image/png"
    },
    {
      "sizes": "96x96",
      "src": "/icons/icon-96.png",
      "type": "image/png"
    },
    {
      "sizes": "144x144",
      "src": "/icons/icon-144.png",
      "type": "image/png"
    },
    {
      "sizes": "192x192",
      "src": "/icons/icon-192.png",
      "type": "image/png"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+weather",
      "url": "/?location=%s"
    }
  ]
}
